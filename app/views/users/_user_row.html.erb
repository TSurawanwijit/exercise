<div id="<%= dom_id user %>">

  <tr>
    <th scope="row"><%= user.id %></th>
    <td><%= user.email %></td>
    <td>
      <% if user.admin %>
        Admin
      <% else %>
        User
      <% end %>
    </td>
    <td>
      <% if (current_user.admin && user.admin == false) || @admin_count == 0 %>
        <%= button_to "Upgrade to Admin", users_upgrade_to_admin_url(user), method: :patch, params: { id: user.id }, class:"btn btn-danger", form: { data: { turbo_confirm: 'Are you sure?' } } %>
      <% end %>
    </td>
  </tr>

</div>